@page
@model WikiWikiWorld.Web.Pages.Account.LoginModel
@{
	ViewData["Title"] = "Login";
}



<article>
	<h1 class="title">Login</h1>

	<div>
		<form method="post">
			<br /><br />
			<div class="form-group">
				<label asp-for="Input.UserName"></label>
				<input asp-for="Input.UserName" class="form-control" />
				<span asp-validation-for="Input.UserName" class="text-danger"></span>
			</div>
			<br /><br />
			<div class="form-group">
				<label asp-for="Input.Password"></label>
				<input asp-for="Input.Password" type="password" class="form-control" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<br /><br />
			<div class="form-group">
				<div class="form-check">
					<input asp-for="Input.RememberMe" class="form-check-input" />
					<label asp-for="Input.RememberMe" class="form-check-label"></label>
				</div>
			</div>
			<br /><br />
			<button type="submit" class="btn btn-primary">Login</button>
		</form>

		<div>
			<a asp-page="/Account/Register">Register</a>
		</div>
	</div>
</article>