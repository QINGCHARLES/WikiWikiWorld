@page
@model ArticleHistoryModel
@using WikiWikiWorld.Data.Models
@{
	ViewData["Title"] = $"Revision History: {Model.ArticleTitle}";
}

<figure>
	<h1>Revision History</h1>
</figure>

<article>
	<div class="history-container">
		<div class="history-header">
			<a href="/@Model.UrlSlug" class="back-link">← Back to Article</a>
			<h2 class="article-title">@Model.ArticleTitle</h2>
			<p class="revision-count">@Model.ArticleRevisions.Count @(Model.ArticleRevisions.Count == 1 ? "revision" : "revisions")</p>
		</div>

		@if (Model.ArticleRevisions.Count > 0)
		{
			<ul class="revision-list">
				@{
					bool IsFirstRow = true;
				}
				@foreach (ArticleRevision Revision in Model.ArticleRevisions)
				{
					string RevisionTimestamp = ArticleHistoryModel.FormatRevisionTimestamp(Revision.DateCreated);
					string RevisionUrl = $"/{Model.UrlSlug}/revision/{RevisionTimestamp}";
					string RevisionDateFormatted = Revision.DateCreated.ToString("dd MMMM yyyy, HH:mm");
					string RelativeTime = ArticleHistoryModel.GetRelativeTime(Revision.DateCreated);
					string? Username = Model.UserNames.TryGetValue(Revision.CreatedByUserId, out string? name) ? name : null;
					Guid? ProfilePic = Model.UserProfilePics.TryGetValue(Revision.CreatedByUserId, out Guid? pic) ? pic : null;

					<li class="revision-item @(IsFirstRow ? "current" : "")">
						<div class="revision-avatar">
							@if (Username is not null && ProfilePic is not null)
							{
								<a href="/@@Username" title="@Username">
									<img src="/sitefiles/@(Model.SiteId)/profilepics/@(ProfilePic).png" alt="@Username" />
								</a>
							}
							else
							{
								<div class="avatar-placeholder">@(Username?[0].ToString().ToUpperInvariant() ?? "?")</div>
							}
						</div>
						<div class="revision-content">
							<div class="revision-header">
								<a href="@RevisionUrl" class="revision-date-link">
									<time datetime="@Revision.DateCreated.ToString("o")">@RevisionDateFormatted</time>
								</a>
								@if (IsFirstRow)
								{
									<span class="current-badge">Current</span>
									IsFirstRow = false;
								}
							</div>
							<div class="revision-meta">
								@if (Username is not null)
								{
									<span class="revision-author">
										by <a href="/@@Username">@Username</a>
									</span>
								}
								<span class="revision-relative-time">@RelativeTime</span>
							</div>
							@if (!string.IsNullOrWhiteSpace(Revision.RevisionReason))
							{
								<p class="revision-reason">@Revision.RevisionReason</p>
							}
							@if (Revision.Title != Model.ArticleTitle)
							{
								<p class="revision-title-change">
									<span class="label">Title at this revision:</span> @Revision.Title
								</p>
							}
						</div>
						<div class="revision-actions">
							<a href="@RevisionUrl" class="btn-view">View</a>
						</div>
					</li>
				}
			</ul>
		}
		else
		{
			<div class="empty-state">
				<p>No revisions found for this article.</p>
			</div>
		}
	</div>
</article>

<style>
	.history-container {
		max-width: 800px;
		margin: 0 auto;
		padding: var(--space-l) 0;
	}

	.history-header {
		margin-bottom: var(--space-l);
		padding-bottom: var(--space-m);
		border-bottom: 1px solid var(--color-border);
	}

	.back-link {
		display: inline-block;
		color: var(--color-primary);
		text-decoration: none;
		font-size: var(--step--1);
		margin-bottom: var(--space-s);
		transition: color 0.2s ease;
	}

	.back-link:hover {
		color: var(--color-hyperlinks);
		text-decoration: underline;
	}

	.article-title {
		margin: 0 0 var(--space-xs);
		font-size: var(--step-2);
		color: var(--color-foreground);
		font-weight: 600;
	}

	.revision-count {
		margin: 0;
		color: var(--color-muted);
		font-size: var(--step--1);
	}

	.revision-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.revision-item {
		display: flex;
		align-items: flex-start;
		gap: var(--space-m);
		padding: var(--space-m);
		border-radius: 0.75rem;
		background: var(--color-surface);
		margin-bottom: var(--space-s);
		border: 1px solid var(--color-border);
		transition: all 0.2s ease;
	}

	.revision-item:hover {
		border-color: var(--color-primary);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
	}

	.revision-item.current {
		border-color: var(--color-primary);
		background: linear-gradient(135deg, var(--color-surface) 0%, var(--uchu-green-1) 100%);
	}

	.revision-avatar {
		flex-shrink: 0;
		width: 48px;
		height: 48px;
		border-radius: 50%;
		overflow: hidden;
		background: var(--color-surface-alt);
		display: flex;
		align-items: center;
		justify-content: center;
		border: 2px solid var(--color-border);
	}

	.revision-avatar img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.revision-avatar a {
		display: flex;
		width: 100%;
		height: 100%;
	}

	.avatar-placeholder {
		font-size: 1.25rem;
		font-weight: bold;
		color: var(--color-muted);
	}

	.revision-content {
		flex: 1;
		min-width: 0;
	}

	.revision-header {
		display: flex;
		align-items: center;
		gap: var(--space-xs);
		flex-wrap: wrap;
		margin-bottom: var(--space-3xs);
	}

	.revision-date-link {
		font-weight: 600;
		font-size: var(--step-0);
		color: var(--color-foreground);
		text-decoration: none;
	}

	.revision-date-link:hover {
		color: var(--color-primary);
		text-decoration: underline;
	}

	.current-badge {
		display: inline-block;
		padding: 0.125rem 0.5rem;
		background: var(--color-primary);
		color: white;
		font-size: var(--step--2);
		font-weight: 600;
		border-radius: 9999px;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.revision-meta {
		display: flex;
		align-items: center;
		gap: var(--space-s);
		font-size: var(--step--1);
		color: var(--color-muted);
		margin-bottom: var(--space-3xs);
	}

	.revision-author a {
		color: var(--color-primary);
		text-decoration: none;
	}

	.revision-author a:hover {
		text-decoration: underline;
	}

	.revision-relative-time {
		opacity: 0.75;
	}

	.revision-reason {
		margin: var(--space-xs) 0 0;
		padding: var(--space-xs) var(--space-s);
		background: var(--color-surface-alt);
		border-radius: 0.5rem;
		font-size: var(--step--1);
		color: var(--color-foreground);
		font-style: italic;
		border-left: 3px solid var(--color-primary);
	}

	.revision-title-change {
		margin: var(--space-xs) 0 0;
		font-size: var(--step--1);
		color: var(--color-muted);
	}

	.revision-title-change .label {
		font-weight: 600;
	}

	.revision-actions {
		flex-shrink: 0;
		display: flex;
		align-items: center;
	}

	.btn-view {
		display: inline-block;
		padding: 0.5rem 1rem;
		background: var(--color-surface-alt);
		color: var(--color-foreground);
		text-decoration: none;
		font-size: var(--step--1);
		font-weight: 500;
		border-radius: 0.5rem;
		border: 1px solid var(--color-border);
		transition: all 0.2s ease;
	}

	.btn-view:hover {
		background: var(--color-primary);
		color: white;
		border-color: var(--color-primary);
	}

	.empty-state {
		text-align: center;
		padding: var(--space-xl);
		color: var(--color-muted);
	}

	/* Responsive adjustments */
	@@media (max-width: 600px) {
		.revision-item {
			flex-wrap: wrap;
		}

		.revision-avatar {
			width: 40px;
			height: 40px;
		}

		.revision-actions {
			width: 100%;
			margin-top: var(--space-s);
		}

		.btn-view {
			width: 100%;
			text-align: center;
		}
	}
</style>
