			<div class="header-b">
				@if (SignInManager.IsSignedIn(User))
				{
					WikiWikiWorld.Data.Models.User? CurrentUser = await UserManager.GetUserAsync(User);
					string UserName = CurrentUser?.UserName ?? User?.Identity?.Name ?? "profile";
					int SiteId = Model?.SiteId ?? 0;
					if (SiteId <= 0)
					{
						SiteId = 1;
					}
					string ProfileUrl = $"/@{UserName}/profile";
					string? ProfilePicGuid = CurrentUser?.ProfilePicGuid?.ToString();
					string? AvatarPath = !string.IsNullOrWhiteSpace(ProfilePicGuid)
						? Url.Content($"~/sitefiles/{SiteId}/profilepics/{ProfilePicGuid}.png")
						: null;
					string AvatarInitial = !string.IsNullOrEmpty(UserName)
						? char.ToUpperInvariant(UserName[0]).ToString()
						: "?";
					<a class="avatar header-avatar" href="@ProfileUrl" title="@UserName" aria-label="View profile for @UserName">
						@if (!string.IsNullOrWhiteSpace(AvatarPath))
						{
							<img src="@AvatarPath" alt="@UserName" />
						}
						else
						{
							<span class="avatar-initials">@AvatarInitial</span>
						}
					</a>
				}
				else
				{
					<a class="button" href="/Account/Login" data-button-variant="naked">Log In</a>
